button {
  background-color: #8389EC;
  color: #FFFFFF;
  border: none;
}
.banner {
  height: 110px;
  line-height: 110px;
  width: calc(100vw - 30px);
  margin: 15px;
  border-radius: 10px;
  text-align: center;
}
.banner .image {
  width: 100%;
}
.contentBox {
  background-color: #FFFFFF;
  height: calc(100vh - 110px);
  position: relative;
}
.navbox {
  position: absolute;
  top: 0;
  display: flex;
  width: 100%;
  line-height: 40px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  background-color: #FFFFFF;
  z-index: 100;
}
.navImg {
  width: 25px;
  height: 25px;
  margin-top: 13px;
}
.navbar {
  display: flex;
  height: 50px;
  padding: 0 8px;
  position: relative;
  z-index: 10;
  width: calc(100% - 55px);
}
.navbar .nav-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 17px;
  color: #8F969F;
  position: relative;
}
.navbar .nav-item.current {
  color: #606877;
}
.navbar .nav-item.current:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 44px;
  height: 0;
  border-bottom: 2px solid #CCCCCC;
}
.list {
  position: relative;
  top: 50px;
  height: calc(100% - 40px);
  overflow-y: scroll;
}
.list .articleBox {
  height: 75px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  display: flex;
}
.list .articleBox .listImg {
  display: flex;
  width: 50px;
}
.list .articleBox .listImg .articleIcon {
  padding: 16px 0 0 12px;
  height: 35px;
  width: 25px;
}
.list .articleBox .listText {
  padding: 14px 0;
  width: 70%;
}
.list .articleBox .listText .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 17px;
}
.list .articleBox .listFee {
  display: flex;
  color: #8f969f;
  width: 50px;
  padding: 38px 0;
  justify-content: flex-end;
}

