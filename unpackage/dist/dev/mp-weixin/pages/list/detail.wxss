button {
  background-color: #8389EC;
  color: #FFFFFF;
  border: none;
}
page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #efeff4;
  min-height: 100%;
  height: auto;
}
view {
  font-size: 14px;
  line-height: inherit;
}
.example-body {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  margin: 12px 0;
  padding: 0;
  font-size: 14px;
}
.content_box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
}
.content_text {
  display: flex;
  flex-direction: column;
}
.content_text .title {
  line-height: 24px;
  font-size: 17px;
}
.content_text .text {
  font-size: 14px;
  color: #b5becb;
}
.content_btn {
  display: flex;
  align-items: center;
}
.content_btn .used_btn {
  height: 30px;
  line-height: 30px;
  background-color: #8389EC;
  border: none;
  color: #FFFFFF;
  border-radius: 16px;
  font-size: 14px;
}

